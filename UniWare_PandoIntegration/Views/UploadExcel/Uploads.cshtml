@{
    Layout = null;
}
<title>Upload For SO</title>
<link href="~/css/font_family.css" rel="stylesheet" />
<link href="~/css/css_bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/fontawesome4.7.0.min.css" rel="stylesheet" />
<script src="~/js/jquery-3.7.0.min.js"></script>
<script src="~/js/toast.min.js"></script>
<script src="~/js/jquery.datatables.min.js"></script>
<script src="~/js/datatables.bootstrap.min.js"></script>
<script src="~/js/datatables.responsive.min.js"></script>
<script src="~/js/responsive.bootstrap.min.js"></script>
<link href="~/css/css_datatables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/css_responsive.bootstrap.min.css" rel="stylesheet" />
<script type="text/javascript">
    function FileUploadValidation() {
        var allowedFiles = [".xls", ".xlsx"];
        var fileUpload = $("#dataFile");
        var regex = new RegExp("([a-zA-Z0-9()\s_\\.\-:])+(" + allowedFiles.join('|') + ")$");
        if (!regex.test(fileUpload.val().toLowerCase())) {
            alert("Please upload Excel File");
            return false;
        }
        return true;
    }


    $("#DispatchTemplate").click(function () {
        var url = "/UploadExcel/DispatchUploadTemplate/";
        window.location.href = url;
    });
</script>
<style>
    .page-title {
        font-family: Times New Roman;
        font-size: 25px;
        color: #dc3545;
        margin-left: 25px;
        font-weight: 500;
    }

    #DispatchTemplate {
        position: absolute;
        top: 9%;
        right: 0;
        width: 141px;
        transform: translateY(-50%);
    }
</style>


<div class="container">
    <div class="col-md-12">
        <button class="btn btn-success " id="DispatchTemplate"><i class="mdi mdi-download" style="color: #fff !important">Download Template</i></button>

        <div class="col-md-3" style="padding:39px;margin-left: 210px;" ">
            <div class="left-side-content" style="margin-top:60px;">
                <div style="width: 497px;height: 140px;">
                    <div class="col-8 align-self-center">
                        <h4 class="page-title">Sale Order Upload</h4>
                    </div>
        @using (Html.BeginForm("UploadExcelData", "UploadExcel", FormMethod.Post, new { style = "padding:41px;margin-left:31px;background:#dc3545;border-radius:50px 20px;", enctype = "multipart/form-data", }))
        {
                        <div class="form-group">
                            <input type="file" id="dataFile" name="upload" />
                        </div>
                        <div class="form-group" style="padding: 1px;">
                            <button class="" type="submit" id="btnExportExcel" onclick="return FileUploadValidation();" style="border-radius: 9px;width: 95px;">
                                Upload
                            </button>
                        </div>
        }
                </div>
            </div>

        </div>
    </div>

</div>
